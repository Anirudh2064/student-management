<form action="/api/users" method="POST" id="add_user">
    <div class="new_user">

        <div class="form-group">
            <label for="name" class="text-light">Name</label>
            <input type="hidden" class="id" value="">
            <input required="true" type="text" name="name" value="" placeholder="Enter Name of the student">
        </div>

        <div class="form-group">
            <label for="Email" class="text-light">Email</label>
            <input required="true" type="text" name="email" value="" placeholder="Enter Email address">
        </div>

        <div class="form-group">
            <label for="contact" class="text-light">Contact</label>
            <input required="true" type="text" name="contact" value="" placeholder="Enter mobile number">
        </div>

        <div class="form-group">
            <label for="gender" class="text-light">Gender</label>
            <div class="radio inline">
                <input required="true" type="radio" id="radio-a" name="gender" value="Male">
                <label for="radio-a" class="radio-label">Male</label>
            </div>
            <div class="radio inline">
                <input required="true" type="radio" id="radio-b" name="gender" value="Female">
                <label for="radio-b" class="radio-label">Female</label>
            </div>
        </div>

        <div class="form-group">
            <label for="branch" class="text-light">Branch</label>
            <div class="radio inline">
                <input type="radio" id="radio-c" name="branch" value="CSE">
                <label for="radio-c" class="radio-label">CSE</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-d" name="branch" value="IT">
                <label for="radio-d" class="radio-label">IT</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-e" name="branch" value="Mech">
                <label for="radio-e" class="radio-label">Mech</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-f" name="branch" value="Electrical">
                <label for="radio-f" class="radio-label">Electrical</label>
            </div>
        </div>

        <div class="form-group">
            <button type="submit" class="btn text-dark update">Save</button>
        </div>

    </div>   
</form>